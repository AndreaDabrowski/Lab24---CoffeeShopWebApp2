
@{
    ViewBag.Title = "Admin";
}

<h2>Admin</h2>
@ViewBag.AddedItem
<a href="/Home/AddItem">Add New Item</a>
<table border="1" class="table">
    <!--class allows you to manipulate with JS-->
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    @foreach (var item in ViewBag.SendItemDB)
    {
        <tr>
            <td>@item.i_name</td>
            <td>@item.i_description</td>
            <td>@item.i_quantity</td>
            <td>@item.i_price</td>
            <td><a href="/Home/EditItem?i_name=@item.i_name">Edit Item</a></td>
            <td><a href="/Home/DeleteItem?i_name=@item.i_name" onclick="return ConfirmDelete();">Delete Item</a></td>
        </tr>
    }@*lists each items properties from the database inside each cell of the table*@
</table>

<script> //Javascript to prompt user before deletion from database
    function ConfirmDelete() {
        if (confirm("Are you sure you want to delete this item?") === true) {

            return true;
        }
        else {
            return false;
        }
    }
</script>