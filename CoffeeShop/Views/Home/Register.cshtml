@{
    ViewBag.Title = "Register";

}
<h1>Registration Page</h1>
<h3>Sign up below:</h3>

<h3>@ViewBag.AddedUser</h3><br />
<form action="/Home/AddNewUser" method="post" id="Form"> <!--onsubmit="validForm(this.form)">-->
    
    <label class="control-label">
        <input type="text" name="u_firstname" id="FirstName" class="form-control" placeholder="First Name" onchange="ValidateFirstName()" /><!-- pattern="^[a-ZA-Z][1,]$" title="Error Message! You dont need this!"-->
    </label> <br />
    <label class="control-label">
        <input type="text" name="u_lastname" id="LastName" class="form-control" placeholder="Last Name" onchange="ValidateLastName()"/>
    </label> <br />
    <label class="control-label">
        <input type="email" name="u_email" id="Email" class="form-control" placeholder="Email" onkeyup="check_match2()" onchange="ValidateEmail()"/>
    </label> <br />
    <label class="control-label">
        <input type="email" name="ConfirmEmail" id="ConfirmEmail" class="form-control" placeholder="Confirm Email" onkeyup="check_match2()" onchange="EmailsEqual()"/>
        <span id="message2"></span>
    </label> <br />
    @*<label class="control-label">
        Birthdate:
        <input type="text" name="u_birthday" id="Birthdate" class="form-control" placeholder="Birthday (mm/dd/yyyy)" onchange="TestBirthday()"/>
    </label> <br />*@
    <label class="control-label">
        <input type="tel" name="u_phonenumber" id="PhoneNumber" class="form-control" placeholder="Phone Number" onchange="ValidatePhoneNumber()"/>
    </label> <br />
    <label class="control-label">
        <input type="password" name="u_password" id="Password" class="form-control" placeholder="Password" onkeyup="check_match()" onchange="ValidatePassword()"/>
    </label> <br />
    <label class="control-label">
        <input type="password" name="PasswordConfirm" id="PasswordConfirm" class="form-control" placeholder ="Confirm Password"onkeyup="check_match()" onchange="PasswordsEqual()"/>
        <span id="message"></span>
    </label> <br />
    <br/>
    <fieldset>
        <section>
            <p>Excitement Meter:</p><span>Bummed</span><input type="range" name="Excitement" id="Excitement" class="form-control" /><span>Hyped</span>
        </section><legend>Non-Text Fieldsets</legend>@*none are connected to anything yet*@

        Sign up for promotions?<input type="checkbox" name="u_promo" id="Promo" class="form-control" />
        What are you shopping for?<br />
        <input type="radio" name="u_preference" value="Drinks"> Drinks<br>
        <input type="radio" name="u_preference" value="BakeryItems"> Bakery Items<br>
        <input type="radio" name="u_preference" value="NonFoodItems"> Non-Food Items<br>
        <input type="radio" name="u_preference" value="No Preference"> No Preference<br>
    </fieldset>

    <input type="submit" onsubmit="return JSValidate()" value="Register!" class="btn-default" id="RegisterButton"/> <!--you can also put JS() reference here-->



</form>
